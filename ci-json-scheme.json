        "environment": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["steps"]
    },
    "kaniko": {
      "type": "object",
      "properties": {
