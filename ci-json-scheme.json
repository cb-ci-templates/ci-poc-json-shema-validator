{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "ciTemplate": {
      "type": "string",
      "enum": ["maven"]
    },
    "build": {
      "type": "object",
      "properties": {
        "environment": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["environment", "steps"]
    },
    "kaniko": {
      "type": "object",
      "properties": {
        "registry_nexus": {
          "type": "object",
          "properties": {
            "dockerHost": {
              "type": "string",
              "format": "uri"
            },
            "credentialID": {
              "type": "string"
            }
          },
          "required": ["dockerHost", "credentialID"]
        },
        "registry_gcr": {
          "type": "object",
          "properties": {
            "dockerHost": {
              "type": "string",
              "format": "uri"
            },
            "credentialID": {
              "type": "string"
            }
          },
          "required": ["dockerHost", "credentialID"]
        }
      },
      "required": ["registry_nexus", "registry_gcr"]
    },
    "qs": {
      "type": "object",
      "properties": {
        "sonar": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "host": {
              "type": "string",
              "format": "uri"
            },
            "credentialID": {
              "type": "string"
            }
          },
          "required": ["enabled", "host", "credentialID"]
        },
        "checkmarx": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "host": {
              "type": "string",
              "format": "uri"
            },
            "credentialID": {
              "type": "string"
            }
          },
          "required": ["enabled", "host", "credentialID"]
        }
      },
      "required": ["sonar", "checkmarx"]
    },
    "deploy": {
      "type": "object",
      "properties": {
        "gke": {
          "type": "object",
          "properties": {
            "cluster": {
              "type": "string"
            },
            "image": {
              "type": "string"
            }
          },
          "required": ["cluster", "image"]
        },
        "ansible": {
          "type": "object",
          "properties": {
            "cluster": {
              "type": "string"
            },
            "image": {
              "type": "string"
            }
          },
          "required": ["cluster", "image"]
        }
      },
      "required": ["gke", "ansible"]
    }
  },
  "required": ["ciTemplate", "build", "kaniko", "qs", "deploy"]
}
