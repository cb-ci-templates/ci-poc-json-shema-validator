{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "ci_template": {"type": "string"},
    "appname": {"type": "string"},
    "build": {
      "type": "object",
      "properties": {
        "environment": {
          "type": "array",
          "items": {"type": "string"}
        },
        "steps": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "kaniko": {
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"},
        "credentialId": {"type": "string"},
        "registry": {"type": "string"},
        "image": {"type": "string"}
      }
    },
    "qs": {
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"},
        "sonar": {
          "type": "object",
          "properties": {
            "enabled": {"type": "boolean"},
            "host": {"type": "string"},
            "project_key": {"type": "string"},
            "credentialId": {"type": "string"}
          }
        },
        "checkmarx": {
          "type": "object",
          "properties": {
            "enabled": {"type": "boolean"},
            "host": {"type": "string"},
            "credentialId": {"type": "string"}
          }
        }
      }
    },
    "deploy": {
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"},
        "gke": {
          "type": "object",
          "properties": {
            "cluster_name": {"type": "string"},
            "cluster_region": {"type": "string"},
            "cluster_namespace": {"type": "string"},
            "credentialId": {"type": "string"}
          }
        }
      }
    }
  },
  "required": ["ci_template", "appname", "build", "kaniko", "qs", "deploy"]
}
