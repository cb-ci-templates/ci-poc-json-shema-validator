{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "ciTemplate": {
      "type": "string",
      "enum": ["maven"]
    },
    "build": {
      "type": "object",
      "properties": {
        "environment": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["environment", "steps"]
    },
    "kaniko": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "credentialID": {
          "type": "string"
        },
        "dockerHost": {
          "type": "string",
          "format": "uri"
        },
        "image": {
          "type": "string"
        }
      },
      "required": ["enabled", "credentialID", "dockerHost", "image"]
    },
    "qs": {
      "type": "object",
      "properties": {
        "sonar": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "host": {
              "type": "string",
              "format": "uri"
            },
            "credentialID": {
              "type": "string"
            }
          },
          "required": ["enabled", "host", "credentialID"]
        },
        "checkmarx": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "host": {
              "type": "string",
              "format": "uri"
            },
            "credentialID": {
              "type": "string"
            }
          },
          "required": ["enabled", "host", "credentialID"]
        }
      },
      "required": ["sonar", "checkmarx"]
    },
    "deploy": {
      "type": "object",
      "properties": {
        "gke": {
          "type": "object",
          "properties": {
            "cluster": {
              "type": "string"
            },
            "image": {
              "type": "string"
            },
            "credentialID": {
              "type": "string"
            }
          },
          "required": ["cluster", "image", "credentialID"]
        },
        "ansible": {
          "type": "object",
          "properties": {
            "extra_vars": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            "inventory": {
              "type": "string",
              "format": "uri"
            },
            "jobTemplate": {
              "type": "string"
            },
            "jobType": {
              "type": "string"
            },
            "throwExceptionWhenFail": {
              "type": "boolean"
            },
            "towerCredentialsId": {
              "type": "string"
            },
            "towerLogLevel": {
              "type": "boolean"
            },
            "towerServer": {
              "type": "string"
            }
          },
          "required": ["extra_vars", "inventory", "jobTemplate", "jobType", "throwExceptionWhenFail", "towerCredentialsId", "towerLogLevel", "towerServer"]
        }
      },
      "required": ["gke", "ansible"]
    }
  },
  "required": ["ciTemplate", "build", "kaniko", "qs", "deploy"]
}
